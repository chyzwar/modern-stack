{
  "extends": "@chyzwar/tsconfig/bundler.json", 
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "tsBuildInfoFile": "./build/buildInfo.json",
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "jest",
      "react",
      "react-dom"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "types": [
        "node"
      ]
    }
  },
  "include": [
    "src"
  ], 
  "references": [
    {"path": "../common/tsconfig.json"}
  ]
}
