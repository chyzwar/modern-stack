{
  "compilerOptions": {
    "target": "ES2019",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "emitDeclarationOnly": true,
    "jsx": "react",
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./build/tsBuildInfoFile.json",
    "outDir": "./build",
    "rootDir": "./src"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/**.test.ts",
    "**/**.test.tsx"
  ]
}
