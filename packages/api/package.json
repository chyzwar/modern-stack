{
  "name": "@project/api",
  "version": "1.0.0",
  "description": "API",
  "type": "module",
  "engines": {
    "node": "16.x",
    "yarn": "3.x"
  },
  "scripts": {
    "preStart": "yarn build && yarn db:migrate",
    "start": "yarn preStart && env-cmd nodemon build/app.js",
    "start:prod": "env-cmd node build/app.js",
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "swc": "swc src -d dist",
    "db:seed": "env-cmd sequelize db:seed",
    "db:migrate": "env-cmd sequelize db:migrate --config config/config.cjs"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/helmet": "^10.1.0",
    "@fastify/http-proxy": "^8.4.0",
    "@fastify/jwt": "^6.7.1",
    "@fastify/oauth2": "^7.0.0",
    "@fastify/static": "^6.9.0",
    "@project/common": "workspace:packages/common",
    "axios": "^1.3.4",
    "fastify": "^4.14.1",
    "fastify-plugin": "^4.5.0",
    "pg": "^8.10.0",
    "pino": "^8.11.0",
    "pino-pretty": "^10.0.0",
    "sequelize": "^6.29.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@project/eslint-config": "^0.2.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.41",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.3",
    "@types/validator": "^13.7.14",
    "dotenv": "^16.0.3",
    "env-cmd": "^10.1.0",
    "eslint": "^8.36.0",
    "nodemon": "^2.0.21",
    "sequelize-cli": "^6.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  }
}
