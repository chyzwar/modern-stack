{
  "name": "@project/api",
  "version": "1.0.0",
  "description": "API",
  "type": "module",
  "engines": {
    "node": "18.x",
    "yarn": "3.x"
  },
  "scripts": {
    "preStart": "yarn build && yarn db:migrate",
    "start": "yarn preStart && env-cmd nodemon build/app.js",
    "start:prod": "env-cmd node build/app.js",
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "swc": "swc src -d dist",
    "db:seed": "env-cmd sequelize db:seed",
    "db:migrate": "env-cmd sequelize db:migrate --config config/config.cjs"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "@fastify/cookie": "^9.1.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/http-proxy": "^9.2.1",
    "@fastify/jwt": "^7.2.1",
    "@fastify/oauth2": "^7.5.0",
    "@fastify/static": "^6.11.2",
    "@project/common": "workspace:packages/common",
    "axios": "^1.5.1",
    "fastify": "^4.23.2",
    "fastify-plugin": "^4.5.1",
    "pg": "^8.11.3",
    "pino": "^8.15.6",
    "pino-pretty": "^10.2.3",
    "sequelize": "^6.33.0"
  },
  "devDependencies": {
    "@chyzwar/eslint-config": "^0.2.13",
    "@chyzwar/tsconfig": "^0.2.13",
    "@jest/globals": "^29.7.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.92",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.3",
    "@types/validator": "^13.11.2",
    "dotenv": "^16.3.1",
    "env-cmd": "^10.1.0",
    "eslint": "^8.51.0",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
