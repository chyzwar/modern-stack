{
  "name": "@project/api",
  "version": "1.0.0",
  "description": "API",
  "engines": {
    "node": "16.x",
    "yarn": "3.x"
  },
  "scripts": {
    "preStart": "yarn build && yarn db:migrate",
    "start": "yarn preStart && env-cmd nodemon build/server.js",
    "start:prod": "env-cmd node build/server.js",
