    "fastify-jwt": "^4.1.3",
    "fastify-oauth2": "^4.5.0",
    "fastify-plugin": "^3.0.1",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "pino": "^7.8.0",
    "pino-pretty": "^7.5.1",
    "pino-syslog": "^2.0.0",
    "sequelize": "^6.16.2"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.19",
    "@types/validator": "^13.7.1",
