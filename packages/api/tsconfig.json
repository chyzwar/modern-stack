{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "incremental": true,
    "composite": true,
    "tsBuildInfoFile": "./dist/tsBuildInfoFile.json",
    "types": [
      "jest",
      "pino",
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}