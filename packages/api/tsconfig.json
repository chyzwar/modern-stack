{
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "module": "ES2022",
    "target": "ES2022",
    "strict": true,
    "sourceMap": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "incremental": true,
    "composite": true,
    "pretty": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "tsBuildInfoFile": "./build/tsBuildInfoFile.json",
    "types": [
      "node",
      "validator"
    ],
  },
  "include": [
    "src"
  ], 
  "references": [
    { "path" : "../common"}
  ]
}